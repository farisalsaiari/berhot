# ── Email Service Configuration ─────────────────────────────────
PORT=4002
NODE_ENV=development
LOG_LEVEL=debug

# ── SMTP Configuration ──────────────────────────────────────────
# Default: MailHog for local dev (no auth needed)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=Berhot
SMTP_FROM_EMAIL=noreply@berhot.dev

# ── Production SMTP (uncomment one provider) ────────────────────
# SendGrid
# SENDGRID_API_KEY=SG.xxxxx

# AWS SES
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY_ID=
# AWS_SES_SECRET_ACCESS_KEY=

# ── Database ────────────────────────────────────────────────────
DATABASE_URL=postgresql://berhot:berhot_dev_password@localhost:5432/berhot_dev

# ── Redis (rate limiting, queue) ────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ── Kafka (event bus) ──────────────────────────────────────────
KAFKA_BROKERS=localhost:9092

# ── Rate Limits ─────────────────────────────────────────────────
EMAIL_RATE_LIMIT_PER_MINUTE=10
EMAIL_RATE_LIMIT_PER_HOUR=100

# ── Verification ────────────────────────────────────────────────
VERIFICATION_TOKEN_EXPIRY_HOURS=24
VERIFICATION_BASE_URL=http://localhost:3000
