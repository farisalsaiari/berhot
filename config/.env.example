# ──────────────────────────────────────────────────────────────
# Berhot Platform – Environment Variables
# Copy this file to .env and fill in real values
# ──────────────────────────────────────────────────────────────

# ── General ───────────────────────────────────────────────────
NODE_ENV=development
LOG_LEVEL=debug
APP_PORT=3000
APP_HOST=0.0.0.0

# ── PostgreSQL ────────────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=berhot
POSTGRES_PASSWORD=berhot_dev_password
POSTGRES_DB=berhot_dev
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ── Redis ─────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ── Kafka ─────────────────────────────────────────────────────
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=berhot-local
KAFKA_GROUP_ID=berhot-dev-group
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# ── Elasticsearch ─────────────────────────────────────────────
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic_dev

# ── MinIO (S3-compatible) ────────────────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_access
MINIO_SECRET_KEY=minio_secret
MINIO_BUCKET=berhot-dev
S3_REGION=us-east-1

# ── Auth & JWT ────────────────────────────────────────────────
JWT_SECRET=your-jwt-secret-change-me-in-production
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800
BCRYPT_ROUNDS=12

# ── OAuth Providers ──────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ── Email (SMTP) ─────────────────────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@berhot.dev

# ── SMS ──────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ── Push Notifications ──────────────────────────────────────
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ── Payment Gateway ─────────────────────────────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# ── Kong API Gateway ────────────────────────────────────────
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# ── Observability ────────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=berhot-platform
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_UI_PORT=16686

# ── Feature Flags ────────────────────────────────────────────
FEATURE_FLAG_PROVIDER=local
LAUNCHDARKLY_SDK_KEY=

# ── Rate Limiting ────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ── CORS ─────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006,http://localhost:3007,http://localhost:3008,http://localhost:3009,http://localhost:3010,http://localhost:3011,http://localhost:3012,http://localhost:3013,http://localhost:3020,http://localhost:3021,http://localhost:3022,http://localhost:3023,http://localhost:3024,http://localhost:5001,http://localhost:5002,http://localhost:5003,http://localhost:5004,http://localhost:5005,http://localhost:5006,http://localhost:5007,http://localhost:5008,http://localhost:5009,http://localhost:5010,http://localhost:5011,http://localhost:5012,http://localhost:5013,http://localhost:5014

# ── File Upload ──────────────────────────────────────────────
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ── Encryption ───────────────────────────────────────────────
ENCRYPTION_KEY=32-byte-hex-key-change-in-production
