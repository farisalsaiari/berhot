# ──────────────────────────────────────
# Berhot Platform – EditorConfig
# https://editorconfig.org
# ──────────────────────────────────────

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.java]
indent_size = 4

[*.sql]
indent_size = 4

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.tf]
indent_size = 2

[*.hcl]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[*.proto]
indent_size = 2
